<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - LinkSnap</title>
    <script src="theme.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        :root {
            --bg-gradient: linear-gradient(135deg, #0f0f23 0%, #1a1a3e 100%);
            --text-color: #e0e6ff;
            --text-secondary: #a0a8cc;
            --container-bg: rgba(255, 255, 255, 0.03);
            --container-border: rgba(255, 255, 255, 0.1);
            --input-bg: rgba(255, 255, 255, 0.05);
            --input-border: rgba(255, 255, 255, 0.15);
            --button-bg: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            --button-hover: linear-gradient(135deg, #5855eb 0%, #7c3aed 100%);
            --title-gradient: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%);
            --shadow-color: rgba(0, 0, 0, 0.3);
            --glass-bg: rgba(255, 255, 255, 0.02);
            --glass-border: rgba(255, 255, 255, 0.08);
            --table-header: rgba(99, 102, 241, 0.8);
            --table-row: rgba(255, 255, 255, 0.03);
            --table-row-hover: rgba(255, 255, 255, 0.08);
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --info-color: #3b82f6;
        }

        [data-theme="light"] {
            --bg-gradient: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            --text-color: #1e293b;
            --text-secondary: #64748b;
            --container-bg: rgba(255, 255, 255, 0.8);
            --container-border: rgba(203, 213, 225, 0.5);
            --input-bg: rgba(255, 255, 255, 0.9);
            --input-border: rgba(203, 213, 225, 0.8);
            --button-bg: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            --button-hover: linear-gradient(135deg, #5855eb 0%, #7c3aed 100%);
            --title-gradient: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%);
            --shadow-color: rgba(0, 0, 0, 0.1);
            --glass-bg: rgba(255, 255, 255, 0.4);
            --glass-border: rgba(203, 213, 225, 0.3);
            --table-header: rgba(99, 102, 241, 0.9);
            --table-row: rgba(248, 250, 252, 0.8);
            --table-row-hover: rgba(241, 245, 249, 0.9);
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --info-color: #3b82f6;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            background: var(--bg-gradient);
            color: var(--text-color);
            transition: all 0.3s ease;
            overflow-x: hidden;
        }

        .background-pattern {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image:
                radial-gradient(circle at 20% 20%, rgba(120, 119, 198, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 119, 198, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(120, 219, 226, 0.1) 0%, transparent 50%);
            animation: float 20s ease-in-out infinite;
            z-index: -1;
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(180deg);
            }
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 40px;
            backdrop-filter: blur(10px);
            background: var(--glass-bg);
            border-bottom: 1px solid var(--glass-border);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .logo {
            font-size: 24px;
            font-weight: 700;
            background: var(--title-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .nav-actions {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .nav-btn {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.2s ease;
            font-weight: 500;
            font-size: 14px;
            background: var(--input-bg);
            color: var(--text-color);
            border: 1px solid var(--input-border);
            backdrop-filter: blur(10px);
        }

        .nav-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px var(--shadow-color);
        }

        .nav-btn.primary {
            background: var(--button-bg);
            color: white;
            border: none;
        }

        .nav-btn.primary:hover {
            background: var(--button-hover);
        }

        .theme-toggle {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            background: var(--input-bg);
            border: 1px solid var(--input-border);
            backdrop-filter: blur(10px);
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .theme-toggle:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px var(--shadow-color);
        }

        .main-content {
            padding: 40px 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .dashboard-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .dashboard-title {
            font-size: clamp(2rem, 4vw, 3rem);
            font-weight: 700;
            background: var(--title-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 12px;
            animation: slideUp 0.8s ease-out;
        }

        .dashboard-subtitle {
            font-size: 1.1rem;
            color: var(--text-secondary);
            animation: slideUp 0.8s ease-out 0.2s both;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: var(--container-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--container-border);
            border-radius: 16px;
            padding: 24px;
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px var(--shadow-color);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--title-gradient);
        }

        .stat-icon {
            font-size: 2rem;
            margin-bottom: 12px;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-color);
            margin-bottom: 8px;
        }

        .stat-label {
            font-size: 14px;
            color: var(--text-secondary);
            font-weight: 500;
        }

        .urls-container {
            background: var(--container-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--container-border);
            border-radius: 24px;
            padding: 32px;
            box-shadow: 0 20px 40px var(--shadow-color);
            animation: slideUp 0.8s ease-out 0.4s both;
        }

        .urls-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .urls-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-color);
        }

        .create-btn {
            background: var(--button-bg);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-block;
        }

        .create-btn:hover {
            background: var(--button-hover);
            transform: translateY(-2px);
        }

        .table-container {
            overflow-x: auto;
            border-radius: 12px;
            border: 1px solid var(--input-border);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: var(--table-row);
        }

        th {
            background: var(--table-header);
            color: white;
            padding: 16px;
            text-align: left;
            font-weight: 600;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        th:first-child {
            border-radius: 12px 0 0 0;
        }

        th:last-child {
            border-radius: 0 12px 0 0;
        }

        td {
            padding: 16px;
            color: var(--text-color);
            font-size: 14px;
            border-bottom: 1px solid var(--input-border);
        }

        tr:hover {
            background: var(--table-row-hover);
        }

        tr:last-child td {
            border-bottom: none;
        }

        .url-cell {
            max-width: 300px;
            overflow-wrap: anywhere;
            font-family: 'Courier New', monospace;
            font-size: 12px;
        }

        .short-url {
            color: var(--success-color);
            text-decoration: none;
            font-weight: 500;
            font-family: 'Courier New', monospace;
        }

        .short-url:hover {
            text-decoration: underline;
        }

        .visits-badge {
            background: var(--info-color);
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
            display: inline-block;
            min-width: 30px;
            text-align: center;
        }

        .copy-btn {
            background: var(--success-color);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 8px 12px;
            cursor: pointer;
            font-size: 12px;
            font-weight: 500;
            transition: all 0.2s ease;
            position: relative;
            overflow: hidden;
        }

        .copy-btn:hover {
            background: #059669;
            transform: scale(1.05);
        }

        .copy-btn.copied {
            background: var(--warning-color);
            animation: pulse 0.6s ease;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-secondary);
        }

        .empty-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 12px;
            color: var(--text-color);
        }

        .empty-description {
            font-size: 1rem;
            margin-bottom: 24px;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }

        @media (max-width: 768px) {
            .header {
                padding: 16px 20px;
            }

            .main-content {
                padding: 20px 16px;
            }

            .urls-container {
                padding: 20px;
            }

            .urls-header {
                flex-direction: column;
                gap: 16px;
                align-items: flex-start;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .table-container {
                font-size: 12px;
            }

            th,
            td {
                padding: 12px 8px;
            }

            .url-cell {
                max-width: 200px;
            }
        }
    </style>
</head>

<body>
    <div class="background-pattern"></div>

    <header class="header">
        <div class="logo">LinkSnap</div>
        <nav class="nav-actions">
            <a href="/" class="nav-btn">Create URL</a>
            <a href="/logout" class="nav-btn primary">Logout</a>
            <button class="theme-toggle" onclick="toggleTheme()">
                <span class="theme-icon">🌙</span>
            </button>
        </nav>
    </header>

    <main class="main-content">
        <div class="dashboard-header">
            <h1 class="dashboard-title">Dashboard</h1>
            <p class="dashboard-subtitle">Manage and track your shortened URLs</p>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">🔗</div>
                <div class="stat-number">
                    <%= urls.length %>
                </div>
                <div class="stat-label">Total URLs</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">📊</div>
                <div class="stat-number">
                    <%= urls.reduce((sum, url)=> sum + url.visitHistory.length, 0) %>
                </div>
                <div class="stat-label">Total Clicks</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">🔥</div>
                <div class="stat-number">
                    <%= urls.length> 0 ? Math.max(...urls.map(url => url.visitHistory.length)) : 0 %>
                </div>
                <div class="stat-label">Top Clicks</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">⚡</div>
                <div class="stat-number">
                    <%= urls.filter(url=> url.visitHistory.length > 0).length %>
                </div>
                <div class="stat-label">Active URLs</div>
            </div>
        </div>

        <div class="urls-container">
            <div class="urls-header">
                <h2 class="urls-title">Your Shortened URLs</h2>
                <a href="/" class="create-btn">+ Create New URL</a>
            </div>

            <% if (urls.length> 0) { %>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Short URL</th>
                                <th>Original URL</th>
                                <th>Clicks</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% urls.forEach(url=> { %>
                                <tr>
                                    <td>
                                        <a href="<%= baseUrl %>/<%= url.shortId %>" target="_blank" class="short-url">
                                            <%= baseUrl %>/<%= url.shortId %>
                                        </a>
                                    </td>
                                    <td class="url-cell">
                                        <span title="<%= url.redirectURL %>">
                                            <%= url.redirectURL %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="visits-badge">
                                            <%= url.visitHistory.length %>
                                        </span>
                                    </td>
                                    <td>
                                        <button class="copy-btn"
                                            onclick="copyToClipboard('<%= baseUrl %>/<%= url.shortId %>')">
                                            Copy
                                        </button>
                                    </td>
                                </tr>
                                <% }) %>

                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <div class="empty-state">
                        <div class="empty-icon">🔗</div>
                        <h3 class="empty-title">No URLs Yet</h3>
                        <p class="empty-description">
                            You haven't created any shortened URLs yet. Click the button above to create your first one!
                        </p>
                        <a href="/" class="create-btn">Create Your First URL</a>
                    </div>
                    <% } %>
        </div>
    </main>

    <script>
        function copyToClipboard(text, button) {
            navigator.clipboard.writeText(text).then(() => {
                const originalText = button.textContent;
                button.textContent = 'Copied!';
                button.classList.add('copied');

                setTimeout(() => {
                    button.textContent = originalText;
                    button.classList.remove('copied');
                }, 2000);
            }).catch(err => {
                console.error('Failed to copy: ', err);
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.focus();
                textArea.select();
                try {
                    document.execCommand('copy');
                    button.textContent = 'Copied!';
                    button.classList.add('copied');
                    setTimeout(() => {
                        button.textContent = 'Copy';
                        button.classList.remove('copied');
                    }, 2000);
                } catch (err) {
                    console.error('Fallback copy failed: ', err);
                }
                document.body.removeChild(textArea);
            });
        }

        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.querySelector('.theme-icon');

            if (body.getAttribute('data-theme') === 'light') {
                body.removeAttribute('data-theme');
                themeIcon.textContent = '🌙';
            } else {
                body.setAttribute('data-theme', 'light');
                themeIcon.textContent = '☀️';
            }
        }

        // Add loading animation
        window.addEventListener('load', () => {
            document.querySelectorAll('.stat-card').forEach((card, index) => {
                card.style.animation = `slideUp 0.8s ease-out ${index * 0.1}s both`;
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/ogl@0.0.49/src/index.min.js"></script>
    <script src="/particles.js"></script>
</body>

</html>
