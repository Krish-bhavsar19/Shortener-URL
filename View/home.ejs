<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkSnap - URL Shortener</title>
    <script src="theme.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        :root {
            --bg-gradient: linear-gradient(135deg, #0f0f23 0%, #1a1a3e 100%);
            --text-color: #e0e6ff;
            --text-secondary: #a0a8cc;
            --container-bg: rgba(255, 255, 255, 0.03);
            --container-border: rgba(255, 255, 255, 0.1);
            --input-bg: rgba(255, 255, 255, 0.05);
            --input-border: rgba(255, 255, 255, 0.15);
            --input-focus: rgba(99, 102, 241, 0.4);
            --result-bg: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(34, 197, 94, 0.1) 100%);
            --result-border: #10b981;
            --button-bg: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            --button-hover: linear-gradient(135deg, #5855eb 0%, #7c3aed 100%);
            --title-gradient: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%);
            --shadow-color: rgba(0, 0, 0, 0.3);
            --glass-bg: rgba(255, 255, 255, 0.02);
            --glass-border: rgba(255, 255, 255, 0.08);
        }

        [data-theme="light"] {
            --bg-gradient: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            --text-color: #1e293b;
            --text-secondary: #64748b;
            --container-bg: rgba(255, 255, 255, 0.8);
            --container-border: rgba(203, 213, 225, 0.5);
            --input-bg: rgba(255, 255, 255, 0.9);
            --input-border: rgba(203, 213, 225, 0.8);
            --input-focus: rgba(99, 102, 241, 0.3);
            --result-bg: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(34, 197, 94, 0.1) 100%);
            --result-border: #10b981;
            --button-bg: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            --button-hover: linear-gradient(135deg, #5855eb 0%, #7c3aed 100%);
            --title-gradient: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%);
            --shadow-color: rgba(0, 0, 0, 0.1);
            --glass-bg: rgba(255, 255, 255, 0.4);
            --glass-border: rgba(203, 213, 225, 0.3);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            background: var(--bg-gradient);
            color: var(--text-color);
            transition: all 0.3s ease;
            overflow-x: hidden;
        }

        .background-pattern {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                radial-gradient(circle at 20% 20%, rgba(120, 119, 198, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 119, 198, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(120, 219, 226, 0.1) 0%, transparent 50%);
            animation: float 20s ease-in-out infinite;
            z-index: -1;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(180deg); }
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 40px;
            backdrop-filter: blur(10px);
            background: var(--glass-bg);
            border-bottom: 1px solid var(--glass-border);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .logo {
            font-size: 24px;
            font-weight: 700;
            background: var(--title-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .nav-actions {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .nav-btn {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.2s ease;
            font-weight: 500;
            font-size: 14px;
            background: var(--input-bg);
            color: var(--text-color);
            border: 1px solid var(--input-border);
            backdrop-filter: blur(10px);
        }

        .nav-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px var(--shadow-color);
        }

        .nav-btn.primary {
            background: var(--button-bg);
            color: white;
            border: none;
        }

        .nav-btn.primary:hover {
            background: var(--button-hover);
        }

        .theme-toggle {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            background: var(--input-bg);
            border: 1px solid var(--input-border);
            backdrop-filter: blur(10px);
        }

        .main-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: calc(100vh - 80px);
            padding: 40px 20px;
        }

        .hero-section {
            text-align: center;
            margin-bottom: 40px;
        }

        .hero-title {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 700;
            background: var(--title-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 16px;
            animation: slideUp 0.8s ease-out;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            color: var(--text-secondary);
            max-width: 600px;
            margin: 0 auto;
            animation: slideUp 0.8s ease-out 0.2s both;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .container {
            background: var(--container-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--container-border);
            border-radius: 24px;
            padding: 40px;
            width: 100%;
            max-width: 600px;
            box-shadow: 0 20px 40px var(--shadow-color);
            animation: slideUp 0.8s ease-out 0.4s both;
        }

        .result {
            background: var(--result-bg);
            border: 1px solid var(--result-border);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 32px;
            position: relative;
            overflow: hidden;
        }

        .result::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, var(--result-border), transparent);
        }

        .result-label {
            font-size: 14px;
            color: var(--text-secondary);
            margin-bottom: 8px;
            font-weight: 500;
        }

        .result-url {
            font-size: 16px;
            font-weight: 600;
            color: var(--result-border);
            text-decoration: none;
            word-break: break-all;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .result-url:hover {
            text-decoration: underline;
        }

        .copy-btn {
            padding: 8px 12px;
            background: var(--result-border);
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 12px;
            font-weight: 500;
            transition: all 0.2s ease;
            margin-left: auto;
        }

        .copy-btn:hover {
            transform: scale(1.05);
        }

        .form-container {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        .input-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .input-label {
            font-weight: 600;
            color: var(--text-color);
            font-size: 14px;
        }

        .input-field {
            padding: 16px 20px;
            border: 2px solid var(--input-border);
            border-radius: 12px;
            font-size: 16px;
            background: var(--input-bg);
            color: var(--text-color);
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .input-field:focus {
            outline: none;
            border-color: var(--input-focus);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        }

        .input-field::placeholder {
            color: var(--text-secondary);
        }

        .submit-btn {
            background: var(--button-bg);
            color: white;
            border: none;
            padding: 16px 32px;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .submit-btn:hover {
            background: var(--button-hover);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
        }

        .submit-btn:active {
            transform: translateY(0);
        }

        .footer {
            margin-top: 40px;
            text-align: center;
            color: var(--text-secondary);
            font-size: 14px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 16px;
            margin-top: 32px;
        }

        .stat-card {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
            padding: 16px;
            text-align: center;
            backdrop-filter: blur(10px);
        }

        .stat-number {
            font-size: 24px;
            font-weight: 700;
            color: var(--text-color);
            margin-bottom: 4px;
        }

        .stat-label {
            font-size: 12px;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        @media (max-width: 768px) {
            .header {
                padding: 16px 20px;
            }

            .container {
                padding: 24px;
                margin: 0 16px;
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .nav-actions {
                gap: 8px;
            }

            .nav-btn {
                padding: 6px 12px;
                font-size: 12px;
            }
        }
    </style>
</head>

<body>
    <div class="background-pattern"></div>
    
    <header class="header">
        <div class="logo">LinkSnap</div>
        <nav class="nav-actions">
            <% if (user) { %>
                <a href="/dashboard" class="nav-btn">Dashboard</a>
                <a href="/logout" class="nav-btn primary">Logout</a>
            <% } else { %>
                <a href="/login" class="nav-btn">Login</a>
                <a href="/signup" class="nav-btn primary">Sign Up</a>
            <% } %>
            <button class="theme-toggle" onclick="toggleTheme()">
                <span class="theme-icon">🌙</span>
            </button>
        </nav>
    </header>

    <main class="main-content">
        <div class="hero-section">
            <h1 class="hero-title">Shorten Your Links</h1>
            <p class="hero-subtitle">Create shorter, more manageable links that are perfect for sharing across any platform</p>
        </div>

        <div class="container">
            <% if (locals.id) { %>
                <div class="result">
                    <div class="result-label">Your shortened URL is ready!</div>
                    <div style="display: flex; align-items: center; gap: 12px;">
                        <a href="http://localhost:8001/<%= id %>" target="_blank" class="result-url">
                            http://localhost:8001/<%= id %>
                        </a>
                        <button class="copy-btn" onclick="copyToClipboard('http://localhost:8001/<%= id %>')">
                            Copy
                        </button>
                    </div>
                </div>
            <% } %>

            <form action="/url" method="post" class="form-container">
                <div class="input-group">
                    <label for="url-input" class="input-label">Enter your original URL</label>
                    <input 
                        type="text" 
                        id="url-input" 
                        name="url" 
                        class="input-field"
                        placeholder="https://example.com/very-long-url-that-needs-shortening" 
                        required 
                    />
                </div>
                <button type="submit" class="submit-btn">
                    Generate Short URL
                </button>
            </form>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number">99.9%</div>
                    <div class="stat-label">Uptime</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">1M+</div>
                    <div class="stat-label">Links Created</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">Fast</div>
                    <div class="stat-label">Response</div>
                </div>
            </div>
        </div>

        <div class="footer">
            Powered by LinkSnap • Fast, reliable, and secure URL shortening
        </div>
    </main>

    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                const button = event.target;
                const originalText = button.textContent;
                button.textContent = 'Copied!';
                button.style.background = '#10b981';
                setTimeout(() => {
                    button.textContent = originalText;
                    button.style.background = '';
                }, 2000);
            });
        }

        // Theme toggle functionality (assumes theme.js exists)
        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.querySelector('.theme-icon');
            
            if (body.getAttribute('data-theme') === 'light') {
                body.removeAttribute('data-theme');
                themeIcon.textContent = '🌙';
            } else {
                body.setAttribute('data-theme', 'light');
                themeIcon.textContent = '☀️';
            }
        }

        // Add subtle animations on load
        window.addEventListener('load', () => {
            const container = document.querySelector('.container');
            container.style.transform = 'translateY(0)';
            container.style.opacity = '1';
        });
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/ogl@0.0.49/src/index.min.js"></script>
    <script src="/particles.js"></script>
</body>

</html>
